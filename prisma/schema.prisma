generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------------------------------------------------------------------------
// Identity Module
// -----------------------------------------------------------------------------

model Club {
  id        String   @id @default(uuid())
  name      String
  mode      String?  // e.g. "virtual", "in-person"
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  memberships   Membership[]
  cycles        Cycle[]
  sessions      Session[]
  incidents     Incident[]
  pointsAccounts PointsAccount[]
  ruleSets      RuleSet[]

  @@map("clubs")
}

model Person {
  id            String   @id @default(uuid())
  fullName      String   @map("full_name")
  email         String?  @unique
  phone         String?
  googleId      String?  @unique @map("google_id")
  passwordHash  String?  @map("password_hash")
  refreshToken  String?  @map("refresh_token")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  memberships Membership[]

  @@map("people")
}


enum MemberRole {
  MEMBER
  MODERATOR
  admin
}

enum MemberStatus {
  ACTIVE
  INACTIVE
  LEFT
}

model Membership {
  id        String       @id @default(uuid())
  clubId    String       @map("club_id")
  personId  String       @map("person_id")
  role      MemberRole   @default(MEMBER)
  status    MemberStatus @default(ACTIVE)
  joinedAt  DateTime     @default(now()) @map("joined_at")
  leftAt    DateTime?    @map("left_at")
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  club   Club   @relation(fields: [clubId], references: [id])
  person Person @relation(fields: [personId], references: [id])

  attendanceRecords AttendanceRecord[]
  attendanceMarked  AttendanceRecord[] @relation("MarkedBy")
  incidents         Incident[]         @relation("IncidentMetadata")
  pointsAccounts    PointsAccount[]
  createdIncidents  Incident[]         @relation("CreatedBy")

  @@unique([clubId, personId, leftAt], name: "unique_active_membership") // simplified uniqueness constraint
  // Note: Prisma doesn't perfectly support partial unique indexes in @@unique syntax directly without raw SQL migration for complex conditions,
  // but we can use this approximation or handle logic in application layer.
  // Actually, standard unique index on (clubId, personId) is often enough if we only allow one active membership.
  // Given the requirements: "Unique active membership per (club_id, person_id) where left_at is null".
  // Prisma can do @@unique([clubId, personId]) if we hard delete or use soft delete pattern carefully.
  // For now, let's stick to simple unique constraint on clubId + personId if valid.
  // Re-reading: "where left_at is null" -> this is a partial index. I'll add the raw SQL in migration later if needed,
  // or just unique on (clubId, personId) and if they leave and rejoin, we create a new membership or reactivate the old one?
  // Let's assume rejoining creates a NEW membership record, so uniqueness is tricky.
  // Best approach for Prisma schema: just standard fields, logical enforcement in app.

  @@map("memberships")
}

// -----------------------------------------------------------------------------
// Program Module
// -----------------------------------------------------------------------------

model Cycle {
  id        String   @id @default(uuid())
  clubId    String   @map("club_id")
  name      String
  theme     String?
  startDate DateTime @map("start_date")
  endDate   DateTime? @map("end_date")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  club Club @relation(fields: [clubId], references: [id])

  sessions       Session[]
  incidents      Incident[]
  pointsAccounts PointsAccount[]

  @@map("cycles")
}

enum SessionType {
  LECTURA        // Reading
  COORDINACION   // Coordination
  EXTRAORDINARIA // Extraordinary
}

model Session {
  id          String      @id @default(uuid())
  clubId      String      @map("club_id")
  cycleId     String?     @map("cycle_id")
  sessionType SessionType @map("session_type")
  startsAt    DateTime    @map("starts_at")
  endsAt      DateTime?   @map("ends_at")
  title       String?
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  club  Club   @relation(fields: [clubId], references: [id])
  cycle Cycle? @relation(fields: [cycleId], references: [id])

  attendanceRecords AttendanceRecord[]
  incidents         Incident[]

  @@index([startsAt])
  @@map("sessions")
}

// -----------------------------------------------------------------------------
// Governance Module
// -----------------------------------------------------------------------------

enum AttendanceStatus {
  PRESENT
  ABSENT
  EXCUSED
}

model AttendanceRecord {
  id                  String           @id @default(uuid())
  sessionId           String           @map("session_id")
  membershipId        String           @map("membership_id")
  status              AttendanceStatus
  checkInAt           DateTime?        @map("check_in_at")
  minutesLate         Int              @default(0) @map("minutes_late")
  markedByMembershipId String?          @map("marked_by_membership_id")
  notes               String?
  createdAt           DateTime         @default(now()) @map("created_at")
  updatedAt           DateTime         @updatedAt @map("updated_at")

  session  Session     @relation(fields: [sessionId], references: [id])
  membership Membership @relation(fields: [membershipId], references: [id])
  markedBy   Membership? @relation("MarkedBy", fields: [markedByMembershipId], references: [id])

  @@unique([sessionId, membershipId])
  @@index([createdAt])
  @@map("attendance_records")
}

enum IncidentType {
  LATE
  NO_SHOW
  STRIKE
  FINE
  WARNING
  OTHER
}

model Incident {
  id                  String       @id @default(uuid())
  clubId              String       @map("club_id")
  cycleId             String?      @map("cycle_id")
  sessionId           String?      @map("session_id")
  membershipId        String       @map("membership_id")
  type                IncidentType
  severity            Int?         // 1-5 scale?
  value               Json?        // flexible payload (e.g. amount for fine, points deducted, etc)
  reason              String?
  createdByMembershipId String?      @map("created_by_membership_id")
  createdAt           DateTime     @default(now()) @map("created_at")
  updatedAt           DateTime     @updatedAt @map("updated_at")

  club       Club        @relation(fields: [clubId], references: [id])
  cycle      Cycle?      @relation(fields: [cycleId], references: [id])
  session    Session?    @relation(fields: [sessionId], references: [id])
  membership Membership  @relation("IncidentMetadata", fields: [membershipId], references: [id])
  createdBy  Membership? @relation("CreatedBy", fields: [createdByMembershipId], references: [id])

  @@map("incidents")
}

model PointsAccount {
  id           String   @id @default(uuid())
  clubId       String   @map("club_id")
  cycleId      String?  @map("cycle_id")
  membershipId String   @map("membership_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  club       Club       @relation(fields: [clubId], references: [id])
  cycle      Cycle?     @relation(fields: [cycleId], references: [id])
  membership Membership @relation(fields: [membershipId], references: [id])

  transactions PointsTransaction[]

  @@unique([clubId, cycleId, membershipId]) // simple unique constraint on the triplet
  @@map("points_accounts")
}

model PointsTransaction {
  id              String   @id @default(uuid())
  pointsAccountId String   @map("points_account_id")
  sourceType      String   @map("source_type") // e.g. "manual", "rule", "incident"
  sourceId        String?  @map("source_id")   // ID of the source entity
  points          Decimal  @db.Decimal(10, 2)  // allow fractional points
  description     String?
  createdAt       DateTime @default(now()) @map("created_at")

  pointsAccount PointsAccount @relation(fields: [pointsAccountId], references: [id])

  @@index([pointsAccountId])
  @@map("points_transactions")
}

model RuleSet {
  id            String    @id @default(uuid())
  clubId        String    @map("club_id")
  name          String
  appliesTo     String    // e.g. "ALL", "SESSION:LECTURA", "SESSION:COORDINACION"
  effectiveFrom DateTime  @map("effective_from")
  effectiveTo   DateTime? @map("effective_to")
  priority      Int       @default(0) // Higher priority overrides
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  club  Club   @relation(fields: [clubId], references: [id])
  rules Rule[]

  @@map("rule_sets")
}

model Rule {
  id        String   @id @default(uuid())
  ruleSetId String   @map("rule_set_id")
  ruleKey   String   @map("rule_key")   // e.g. "late_threshold_minutes"
  ruleValue Json     @map("rule_value") // e.g. { "minutes": 10 }
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  ruleSet RuleSet @relation(fields: [ruleSetId], references: [id], onDelete: Cascade)

  @@unique([ruleSetId, ruleKey])
  @@map("rules")
}
